<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/line_ccc" />

        <TextView
            style="@style/textBlackSmall"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/str_area" />

        <com.spark.chiefwallet.ui.flowlayout.TagFlowLayout
            android:id="@+id/fl_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:max_select="1" />

        <TextView
            style="@style/textBlackSmall"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/str_paypay" />

        <com.spark.chiefwallet.ui.flowlayout.TagFlowLayout
            android:id="@+id/fl_pay_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:max_select="-1" />

        <TextView
            style="@style/textBlackSmall"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/limit" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <TextView
                style="@style/textBlackSmall"
                android:layout_margin="16dp"
                android:text="@string/min"
                android:textColor="@color/color_stroke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                app:bl_corners_radius="2dp"
                app:bl_solid_color="@color/white"
                app:bl_stroke_color="@color/color_stroke"
                app:bl_stroke_width="0.5dp"
                tools:ignore="MissingPrefix">

                <EditText
                    android:id="@+id/minLimit"
                    style="@style/trade_input"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:padding="4dp" />

                <TextView
                    style="@style/textBlackSmall"
                    android:inputType="numberDecimal"
                    android:text="CNY" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <TextView
                style="@style/textBlackSmall"
                android:layout_margin="16dp"
                android:text="@string/max"
                android:textColor="@color/color_stroke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                app:bl_corners_radius="2dp"
                app:bl_solid_color="@color/white"
                app:bl_stroke_color="@color/color_stroke"
                app:bl_stroke_width="0.5dp"
                tools:ignore="MissingPrefix">

                <EditText
                    android:id="@+id/maxLimit"
                    style="@style/trade_input"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:padding="4dp" />

                <TextView
                    style="@style/textBlackSmall"
                    android:text="CNY" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                style="@style/textBlackSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black"
                app:bl_ripple_color="@color/gray_ccc"
                app:bl_ripple_enable="true"
                app:bl_solid_color="@color/color_unchecked"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/ensure"
                style="@style/textBlackSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ensure"
                android:textColor="@color/white"
                app:bl_ripple_color="@color/gray_ccc"
                app:bl_ripple_enable="true"
                app:bl_solid_color="@color/color_blue"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
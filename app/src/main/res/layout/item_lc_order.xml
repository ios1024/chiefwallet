<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="lcOrderViewModel"
            type="com.spark.otcclient.pojo.LcOrderResult.DataBean.RecordsBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/textBlackNormal"
                    android:text="@{lcOrderViewModel.initType()}"
                    android:textColor="@{lcOrderViewModel.initTypeColor() ? @color/base : @color/black}"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_marginLeft="0dp"
                    android:text="@{lcOrderViewModel.coinName}"
                    android:textColor="@{lcOrderViewModel.initTypeColor() ? @color/base : @color/black}"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textGrayCommonSmall"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_stroke"
                    android:text="@{lcOrderViewModel.initTradeToUsername()}" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@{lcOrderViewModel.initStatueType()}"
                    android:textColor="@{lcOrderViewModel.initStatueTypeColor() ? @color/color_stroke : @color/base}" />

                <ImageView style="@style/imgEnter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textGrayCommonFont13"
                        android:text="@string/time"
                        android:textColor="@color/color_grey" />

                    <TextView
                        style="@style/textBlackSmall"
                        android:text="@{lcOrderViewModel.formatDate2()}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textGrayCommonFont13"
                        android:layout_width="80dp"
                        android:text="@{lcOrderViewModel.initNumber()}"
                        android:textColor="@color/color_grey" />

                    <TextView
                        style="@style/textBlackSmall"
                        android:layout_width="80dp"
                        android:text="@{lcOrderViewModel.initNumberText()}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textGrayCommonFont13"
                        android:layout_width="wrap_content"
                        android:text="@string/fee2"
                        android:textColor="@color/color_grey" />

                    <TextView
                        style="@style/textBlackSmall"
                        android:layout_width="80dp"
                        android:gravity="right"
                        android:text="@{lcOrderViewModel.getCommissionText()}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textGrayCommonFont13"
                        android:text="@string/str_money_all"
                        android:textColor="@color/color_grey" />

                    <TextView
                        style="@style/textBlackSmall"
                        android:maxLines="1"
                        android:text="@{lcOrderViewModel.initMoneyText()}" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10" />
    </LinearLayout>
</layout>
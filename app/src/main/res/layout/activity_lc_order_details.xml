<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="lcOrderDetailsViewModel"
            type="com.spark.chiefwallet.app.trade.legal_currency.order.details.LcOrderDetailsViewModel"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:id="@+id/fake_status_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <!--title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    onClickCommand="@{lcOrderDetailsViewModel.finishClickCommand}"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/svg_back"
                    app:bl_ripple_color="@color/gray_f5"
                    app:bl_ripple_enable="true"
                    app:bl_solid_color="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{lcOrderDetailsViewModel.title}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_lager"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textBlackSmall"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="@{lcOrderDetailsViewModel.nameShort}"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:bl_corners_radius="20dp"
                        app:bl_solid_color="@color/color_first_char" />

                    <TextView
                        style="@style/textBlackNormal"
                        android:layout_marginLeft="12dp"
                        android:text="@{lcOrderDetailsViewModel.name}"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_10"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:gravity="center"
                    android:text="@{lcOrderDetailsViewModel.dealNumber}"
                    android:textColor="@color/color_grey"
                    android:textSize="@dimen/font_mini" />

            </LinearLayout>

        </LinearLayout>

        <com.spark.chiefwallet.ui.progresslayout.ProgressLinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--买币和卖币公共部分-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        app:bl_corners_radius="2dp"
                        app:bl_solid_color="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/textBlackNormal"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:text="@{lcOrderDetailsViewModel.money}"
                                android:textColor="@color/base"
                                android:textSize="@dimen/font_lager"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_10"
                                android:layout_weight="1" />

                            <TextView
                                style="@style/textBlackNormal"
                                android:text="@{lcOrderDetailsViewModel.orderSn}" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/textBlackSmall"
                                    android:text="@{lcOrderDetailsViewModel.money2}"
                                    android:textColor="@color/color_grey"
                                    android:textSize="@dimen/font_mini" />

                                <TextView
                                    style="@style/textBlackSmall"
                                    android:text="@{lcOrderDetailsViewModel.number}"
                                    android:textColor="@color/color_grey"
                                    android:textSize="@dimen/font_mini" />
                            </LinearLayout>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_10"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/svg_wechatpay" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">

                        <TextView
                            style="@style/textBlackSmall"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="@string/str_order_warn_title"
                            android:textColor="@color/color_stroke" />

                        <TextView
                            style="@style/textBlackSmall"
                            android:layout_marginTop="20dp"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="@string/str_order_warn_content"
                            android:textColor="@color/color_stroke"
                            android:textSize="@dimen/font_mini" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </com.spark.chiefwallet.ui.progresslayout.ProgressLinearLayout>

        <!--底部布局-->
        <LinearLayout
            style="@style/ll_item_48"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">

            <LinearLayout
                onClickCommand="@{lcOrderDetailsViewModel.chatOnClickCommand}"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/base"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/svg_chat" />
            </LinearLayout>

            <TextView
                style="@style/textBlackNormal"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@color/color_unchecked"
                android:gravity="center"
                android:text="@string/str_cancel_order"
                android:textColor="@color/white" />

            <TextView
                style="@style/textBlackNormal"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@color/color_unchecked"
                android:gravity="center"
                android:text="@{lcOrderDetailsViewModel.orderBtn2}"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>
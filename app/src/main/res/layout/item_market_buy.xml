<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="marketBuyViewModel"
            type="com.spark.modulespot.pojo.MarketSymbolResult.DataBean.BidBean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white">

        <TextView
            style="@style/textBlackSmall"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:text="@{marketBuyViewModel.forMatPrice()}"
            android:textColor="@color/rise"
            android:textSize="@dimen/font_xmini"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLines="1"
            android:text="@{marketBuyViewModel.forMatAmount()}"
            android:textSize="@dimen/font_xmini"/>
    </LinearLayout>
</layout>
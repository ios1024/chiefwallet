<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="commissionDetailsViewModel"
            type="com.spark.chiefwallet.app.trade.currency.openorders.details.CommissionDetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/fake_status_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <!--title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/title_left"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/svg_back"
                    app:bl_ripple_color="@color/white"
                    app:bl_ripple_enable="true"
                    app:bl_solid_color="@color/white" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_lager" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.spark.chiefwallet.ui.progresslayout.ProgressLinearLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    app:bl_corners_radius="4dp"
                    app:bl_solid_color="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/textBlackNormal"
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:background="@{commissionDetailsViewModel.isBuyType ? @color/fall_light : @color/rise_light}"
                                android:gravity="center"
                                android:text="@{commissionDetailsViewModel.dealType}"
                                android:textColor="@{commissionDetailsViewModel.isBuyType ? @color/fall : @color/rise}"
                                android:textSize="@dimen/font_xmini"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <TextView
                                    style="@style/textGrayCommonSmall"
                                    android:layout_marginLeft="10dp"
                                    android:text="@{commissionDetailsViewModel.coinSymbol}"
                                    android:textColor="@color/black33"
                                    android:textSize="@dimen/font_mini"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/textGrayCommonSmall"
                                    android:text="/"
                                    android:textSize="12sp" />

                                <TextView
                                    style="@style/textGrayCommonSmall"
                                    android:text="@{commissionDetailsViewModel.baseSymbol}"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/open_order_cancel"
                                style="@style/textBlackNormal"
                                android:text="@{commissionDetailsViewModel.initStatueType}"
                                android:textColor="@color/color_blue"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical">


                            <TextView
                                style="@style/textGrayCommonFont13"
                                android:text="@{commissionDetailsViewModel.initDeal}"
                                android:textColor="@color/gray_a4"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                            <TextView
                                style="@style/textBlackNormal"
                                android:layout_marginTop="5dp"
                                android:text="@{commissionDetailsViewModel.dealAllAccount}"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/textGrayCommonFont13"
                                    android:text="@{commissionDetailsViewModel.entrustVolume}"
                                    android:textColor="@color/gray_a4"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/textBlackNormal"
                                    android:layout_marginTop="5dp"
                                    android:text="@{commissionDetailsViewModel.entrust}"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textGrayCommonFont13"
                                android:text="@{commissionDetailsViewModel.transactionPrice}"
                                android:textColor="@color/gray_a4"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                            <TextView
                                style="@style/textBlackNormal"
                                android:layout_marginTop="5dp"
                                android:text="@{commissionDetailsViewModel.dealEvaluationPrice}"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/textGrayCommonFont13"
                                    android:text="@{commissionDetailsViewModel.dealNumVolume}"
                                    android:textColor="@color/gray_a4"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/textBlackNormal"
                                    android:layout_marginTop="5dp"
                                    android:text="@{commissionDetailsViewModel.dealNum}"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/line_ccc"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_open_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    app:bl_corners_radius="4dp"
                    app:bl_solid_color="@color/white"></android.support.v7.widget.RecyclerView>
            </com.spark.chiefwallet.ui.progresslayout.ProgressLinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</layout>
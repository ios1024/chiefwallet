<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/coin_trans"
        style="@style/ll_item_52"
        app:bl_corners_bottomLeftRadius="4dp"
        app:bl_corners_bottomRightRadius="4dp"
        app:bl_corners_topLeftRadius="4dp"
        app:bl_corners_topRightRadius="4dp"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white"
        tools:ignore="MissingPrefix">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/svg_recharge_black"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_marginLeft="12dp"
            android:text="划转"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:bl_corners_topLeftRadius="3dp"
    app:bl_corners_topRightRadius="3dp"
    app:bl_solid_color="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                style="@style/textBlackLarge"
                android:text="@string/safety_verification"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_4"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/textGrayCommonSmall"
                android:text="@string/cancel"
                android:textColor="@color/base" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/trade_title"
        style="@style/textBlackSmall"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="@string/trade_pwd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/trade_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="@string/trade_pwd_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="12dp"
            app:bl_corners_radius="4dp"
            app:bl_solid_color="@color/gray_456"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_forget"
        style="@style/textGrayCommonSmall"
        android:layout_marginLeft="16dp"
        android:text="@string/str_pwd_forget"
        android:textColor="@color/base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_ensure"
            style="@style/textBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ensure"
            android:textColor="@color/white"
            app:bl_corners_radius="2dp"
            app:bl_pressed_color="@color/base_dark"
            app:bl_solid_color="@color/base"
            app:bl_unpressed_color="@color/base"
            tools:ignore="MissingPrefix" />
    </LinearLayout>


</LinearLayout>
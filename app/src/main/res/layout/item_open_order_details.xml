<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="openOrderDetailsResultVm"
            type="com.spark.modulespot.pojo.OpenOrderDetailsResult.DataBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/ll_item_48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1">

                <TextView

                    style="@style/textGrayCommonFont13"
                    android:text="@string/final_price"
                    android:textColor="@color/gray_a4"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textBlackNormal"

                    android:layout_marginLeft="5dp"
                    android:text="@{openOrderDetailsResultVm.formatPrice()}"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                style="@style/ll_item_48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    style="@style/textGrayCommonFont13"
                    android:text="@string/fee2"
                    android:textColor="@color/gray_a4"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_marginLeft="15dp"
                    android:text="@{openOrderDetailsResultVm.formatFee()}"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/ll_item_48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1">

                <TextView
                    style="@style/textGrayCommonFont13"
                    android:text="@string/transaction_volume"
                    android:textColor="@color/gray_a4"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_marginLeft="5dp"
                    android:text="@{openOrderDetailsResultVm.formatNum()}"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                style="@style/ll_item_48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1">

                <TextView
                    style="@style/textGrayCommonFont13"
                    android:text="@string/dealing_time"
                    android:textColor="@color/gray_a4"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_marginLeft="5dp"
                    android:text="@{openOrderDetailsResultVm.formatTime()}"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adViewModel"
            type="com.spark.chiefwallet.app.me.finance.ad.AdViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/svg_back" />


            <TextView
                style="@style/textGrayCommonFont13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/advertising_management"
                android:textColor="@color/black"
                android:textSize="@dimen/font_lager"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@drawable/svg_business_management" />


        </LinearLayout>

        <com.spark.chiefwallet.ui.tablayout.SlidingTabLayout
            android:id="@+id/ad_tab"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="13dp"
            android:background="@color/white"
            app:tl_indicator_color="@color/white"
            app:tl_indicator_height="2dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_padding="6dp"
            app:tl_textBold="BOTH"
            app:tl_textSelectColor="#333333"
            app:tl_textUnselectColor="#A4ABC0"
            app:tl_textsize="@dimen/font_lager" />


        <android.support.v4.view.ViewPager
            android:id="@+id/ad_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <variable
            name="registerViewModel"
            type="com.spark.chiefwallet.app.me.user.register.RegisterViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/register_title"
            layout="@layout/view_title" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mobile_tv"
                            style="@style/textBlackLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_phone"
                            android:textColor="@color/mobile_login"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/mobile_view"
                            android:layout_width="64dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/base" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mailbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mailbox_tv"
                            style="@style/textBlackLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_email"
                            android:textColor="@color/welcomelogin"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/mailbox_view"
                            android:layout_width="64dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/base"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dp"
                    android:layout_marginRight="18dp"
                    binding:onClickCommand="@{registerViewModel.chooseCountryOnClickCommand}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--<TextView-->
                    <!--android:id="@+id/register_country_code"-->
                    <!--style="@style/textBlackNormal"-->
                    <!--android:layout_weight="1"-->
                    <!--android:paddingLeft="32dp"-->
                    <!--android:text="@{loginViewModel.countryCode}"-->
                    <!--android:textStyle="bold" /> -->
                    <TextView
                        android:id="@+id/register_country_code"
                        style="@style/textBlackNormal"
                        android:layout_weight="1"
                        android:text="@{registerViewModel.countryName}"
                        android:textColor="@color/mobile_login"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/svg_pull_down" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="18dp"
                    android:background="@color/base" />


                <EditText
                    android:id="@+id/phone_num"
                    style="@style/editext_create_wallet"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="18dp"
                    android:hint="@string/phone_num_hint"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textSize="@dimen/font_small" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"

                    android:layout_marginRight="18dp">

                    <EditText
                        style="@style/editext_create_wallet"
                        android:layout_weight="1"
                        android:hint="@string/verify_code_hint"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        style="@style/textBlueCommonSmall"
                        android:text="@string/str_send"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/editext_create_wallet"
                        android:layout_weight="1"
                        android:hint="@string/pwd_error2"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textSize="@dimen/font_small" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/svg_hide" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/editext_create_wallet"
                        android:layout_weight="1"
                        android:hint="@string/enter_again"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textSize="@dimen/font_small" />

                    <ImageView
                        android:id="@+id/pwd_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/svg_hide" />
                </LinearLayout>

                <EditText
                    style="@style/editext_create_wallet"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="18dp"
                    android:hint="@string/invitation_code"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textSize="@dimen/font_small" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:bl_corners_radius="4dp"
                    app:bl_pressed_color="@color/subscript2"
                    app:bl_unpressed_color="@color/base" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="horizontal">

                    <com.spark.chiefwallet.ui.SmoothCheckBox
                        android:id="@+id/sw_ismoney"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:checked="false"
                        android:layout_gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/textBlackLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reading_clauses"
                        android:textColor="@color/mobile_login"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/textBlackLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_of_service"
                        android:textColor="@color/base"
                        binding:onClickCommand="@{registerViewModel.termsofserviceOnClickCommand}"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/textBlackLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_rivacy"
                        android:textColor="@color/base"
                        binding:onClickCommand="@{registerViewModel.rivacyOnClickCommand}"
                        android:textSize="12sp" />
                </LinearLayout>
                <!--<TextView-->
                <!--android:id="@+id/register_get_code"-->
                <!--style="@style/textBlackNormal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="?attr/actionBarSize"-->
                <!--android:layout_margin="16dp"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/get_verify_code"-->
                <!--android:textStyle="bold"-->
                <!--app:bl_corners_radius="4dp"-->
                <!--app:bl_pressed_color="@color/base_dark"-->
                <!--app:bl_unpressed_color="@color/base"-->
                <!--binding:onClickCommand="@{registerViewModel.getCodeOnClickCommand}" />-->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
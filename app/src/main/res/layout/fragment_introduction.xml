<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="introductionViewModel"
            type="com.spark.chiefwallet.app.quotes.kline.introduction.IntroductionViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kline_bg"
        android:orientation="vertical">

        <TextView
            style="@style/textGrayCommonSmall"
            android:lineSpacingMultiplier="1.2"
            android:padding="16dp"
            android:text="比特币（Bitcoin）的概念最初由中本聪在2008年11月1日提出，并于2009年1月3日正式诞生。根据中本聪的思路设计发布的开源软件以及建构其上的P2P网络。比特币是一种P2P形式的虚拟的加密数字货币。点对点的传输意味着一个去中心化的支付系统。"/>

        <View
            style="@style/line_ccc"
            android:background="@color/kline_bg_dark"/>

        <!--发行时间-->
        <LinearLayout
            style="@style/ll_item_52">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/svg_date_gray"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="发行时间"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:text="2014.7.27"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:background="@color/kline_bg_dark"/>

        <!--发行总量-->
        <LinearLayout
            style="@style/ll_item_52">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/svg_circulation_volume_gray"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="发行总量"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:text="9,631.15万"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:background="@color/kline_bg_dark"/>

        <!--流通总量-->
        <LinearLayout
            style="@style/ll_item_52">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/svg_flow_rate_gray"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="流通总量"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:text="9,631.15万"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:background="@color/kline_bg_dark"/>

        <!--众筹价格-->
        <LinearLayout
            style="@style/ll_item_52">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/svg_price_gray"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="众筹价格"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:text="----"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:background="@color/kline_bg_dark"/>

        <!--官网-->
        <LinearLayout
            style="@style/ll_item_52">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/svg_website_gray"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="官网"/>

            <TextView
                style="@style/textGrayCommonFont13"
                android:text="点击查看"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:background="@color/kline_bg_dark"/>

        <!--白皮书-->
        <LinearLayout
            style="@style/ll_item_52">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/svg_white_paper_gray"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="白皮书"/>

            <TextView
                style="@style/textGrayCommonFont13"
                android:text="阅读白皮书"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:background="@color/kline_bg_dark"/>
    </LinearLayout>
</layout>
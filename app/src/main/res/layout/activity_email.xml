                    android:padding="4dp"
                    android:text="@={emailViewModel.code}"
                    android:textSize="@dimen/font_small" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right">


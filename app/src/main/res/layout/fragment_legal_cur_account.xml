<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="legalCurAccountViewModel"
            type="com.spark.chiefwallet.app.me.finance.property.legal_currency.LegalCurAccountViewModel" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.spark.chiefwallet.ui.progresslayout.ProgressLinearLayout
            android:id="@+id/lc_cur_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/my_bg"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@mipmap/fabizichan_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:orientation="vertical">


                        <TextView
                            style="@style/textBlackLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fabi_total_assets"
                            android:textColor="@color/my_bg"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="24dp"-->
                        <!--android:layout_marginLeft="@dimen/dp_10"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:layout_marginRight="8dp"-->
                        <!--android:gravity="center|right"-->
                        <!--android:orientation="horizontal">-->

                        <!--<TextView-->
                        <!--style="@style/textBlackLarge"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:text="@{legalCurAccountViewModel.marginAmount}"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="@dimen/font_lager"-->
                        <!--android:textStyle="bold" />-->

                        <ImageView
                            android:id="@+id/imgIsHideAccount"
                            onClickCommand="@{legalCurAccountViewModel.hideAccountOnClickCommand}"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/svg_show"
                            android:visibility="gone" />

                        <TextView
                            style="@style/textBlackLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@{legalCurAccountViewModel.otcWalletTotalChar}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_lager"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/textBlackSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@{legalCurAccountViewModel.otcWalletTransChar}"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
                <!--</LinearLayout>-->

            </FrameLayout>

            <!--<View style="@style/line_ccc" />-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/otc_wallet_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </com.spark.chiefwallet.ui.progresslayout.ProgressLinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>
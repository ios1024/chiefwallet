<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="120dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/gear_5"
        style="@style/textBlackNormal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="5"
        app:bl_corners_topLeftRadius="4dp"
        app:bl_corners_topRightRadius="4dp"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/gear_10"
        style="@style/textBlackNormal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="10"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/gear_20"
        style="@style/textBlackNormal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="20"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/gear_50"
        style="@style/textBlackNormal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="50"
        app:bl_corners_bottomLeftRadius="4dp"
        app:bl_corners_bottomRightRadius="4dp"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white"
        tools:ignore="MissingPrefix"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            style="@style/line_ccc"/>

        <TextView
            style="@style/textGrayCommonSmall"
            android:layout_margin="16dp"
            android:text="交易类型"/>

        <com.spark.chiefwallet.ui.flowlayout.TagFlowLayout
            android:id="@+id/fl_ad_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:max_select="1"/>

        <TextView
            style="@style/textGrayCommonSmall"
            android:layout_margin="16dp"
            android:text="订单状态"/>

        <com.spark.chiefwallet.ui.flowlayout.TagFlowLayout
            android:id="@+id/fl_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:max_select="1"/>

        <TextView
            style="@style/textGrayCommonSmall"
            android:layout_margin="16dp"
            android:text="币种"/>

        <com.spark.chiefwallet.ui.flowlayout.TagFlowLayout
            android:id="@+id/fl_coin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:max_select="1"/>

        <View
            style="@style/line_ccc"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/textGrayCommonNormal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                app:bl_ripple_color="@color/gray_ccc"
                app:bl_ripple_enable="true"
                app:bl_solid_color="@color/white"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/btn_ensure"
                style="@style/textGrayCommonNormal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/black"
                app:bl_ripple_color="@color/gray_ccc"
                app:bl_ripple_enable="true"
                app:bl_solid_color="@color/base"
                tools:ignore="MissingPrefix"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
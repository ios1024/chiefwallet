<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="businessDetailsViewModel"
            type="com.spark.chiefwallet.app.trade.legal_currency.business.BusinessDetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f5"
        android:orientation="vertical">

        <include
            android:id="@+id/property_details_title"
            layout="@layout/view_title" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--商家信息-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/textBlackSmall"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:gravity="center"
                                        android:text="@{businessDetailsViewModel.nameShort}"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        app:bl_corners_radius="20dp"
                                        app:bl_solid_color="@color/color_first_char" />

                                    <TextView
                                        style="@style/textBlackNormal"
                                        android:layout_marginLeft="12dp"
                                        android:text="@{businessDetailsViewModel.username}"
                                        android:textSize="@dimen/font_small" />
                                </LinearLayout>

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_4"
                                    android:gravity="center"
                                    android:text="@{businessDetailsViewModel.registerTime}"
                                    android:textColor="@color/color_grey"
                                    android:textSize="@dimen/font_mini" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_total_count"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_10"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@{businessDetailsViewModel.totalSuccessCount}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_mini" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_rate"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_10"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@{businessDetailsViewModel.tvRate}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_mini" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_total_count_30"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_10"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@{businessDetailsViewModel.totalSuccessCount30}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_mini" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_release"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_10"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@{businessDetailsViewModel.tvRelease}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_mini" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_email"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:src="@{businessDetailsViewModel.isAuthEmail ? @drawable/svg_authed : @drawable/svg_auth_un}" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_phone"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:src="@{businessDetailsViewModel.isAuthPhone ? @drawable/svg_authed : @drawable/svg_auth_un}" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_id"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:src="@{businessDetailsViewModel.isAuthID ? @drawable/svg_authed : @drawable/svg_auth_un}" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:text="@string/str_business_high"
                                        android:textColor="@color/color_grey"
                                        android:textSize="@dimen/font_mini" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:gravity="center"
                                        android:src="@{businessDetailsViewModel.isAuthHigh ? @drawable/svg_authed : @drawable/svg_auth_un}" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!--广告列表-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <TextView
                                style="@style/textBlackNormal"
                                android:layout_height="30dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center"
                                android:text="@string/str_business_sell"
                                android:textStyle="bold" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_sell_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/textBlackNormal"
                                android:layout_height="30dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center"
                                android:text="@string/str_business_buy"
                                android:textStyle="bold" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_buy_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v4.widget.NestedScrollView>

            </FrameLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>
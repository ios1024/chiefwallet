<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <variable
            name="idCardViewModel"
            type="com.spark.chiefwallet.app.me.safe.authentication.idcard.IdCardViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <TextView
                style="@style/textBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/authentication_rules"
                android:textSize="12sp" />

            <TextView
                style="@style/textBlackSmall"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/name"
                android:textSize="12sp" />

            <!--<EditText-->
            <!--style="@style/editext_create_wallet"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:hint="@string/name_hint"-->
            <!--android:maxLines="1"-->
            <!--android:padding="4dp"-->
            <!--android:text="@={idCardViewModel.userName}"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="@dimen/font_small" />-->

            <EditText
                android:id="@+id/phone_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linl_pay_bg"
                android:hint="@string/name_hint"
                android:maxLines="1"
                android:padding="10dp"
                android:text="@={idCardViewModel.userName}"
                android:textSize="@dimen/font_small" />

            <TextView
                style="@style/textBlackSmall"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/id_card"
                android:textSize="12sp" />

            <!--<EditText-->
            <!--style="@style/editext_create_wallet"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:hint="@string/id_card_hint"-->
            <!--android:maxLines="1"-->
            <!--android:padding="4dp"-->
            <!--android:text="@={idCardViewModel.userIdCard}"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="@dimen/font_small" />-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linl_pay_bg"
                android:hint="@string/id_card_hint"
                android:maxLines="1"
                android:padding="10dp"
                android:text="@={idCardViewModel.userIdCard}"
                android:textSize="@dimen/font_small" />


            <TextView
                style="@style/textBlackSmall"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/identity_card_photos"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textGrayCommonSmall"
                        android:text="@string/id_card_up" />

                    <ImageView
                        android:id="@+id/img_auth_up"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/svg_auth_up"
                        binding:url="@{idCardViewModel.imgAuthUp}" />
                </LinearLayout>

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textGrayCommonSmall"
                        android:text="@string/id_card_down" />

                    <ImageView
                        android:id="@+id/img_auth_down"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/svg_auth_down"
                        binding:url="@{idCardViewModel.imgAuthDown}" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textGrayCommonSmall"
                        android:text="@string/id_card_handheld" />

                    <ImageView
                        android:id="@+id/img_auth_handheld"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/svg_auth_handheld"
                        binding:url="@{idCardViewModel.imgAuthHandheld}" />
                </LinearLayout>

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <com.spark.chiefwallet.ui.SmoothCheckBox
                    android:id="@+id/wechat_cb"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:textSize="12sp" />

                <TextView
                    style="@style/textBlackLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reading_clauses"
                    android:textColor="@color/mobile_login"
                    android:textSize="12sp" />

                <TextView
                    style="@style/textBlackLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_of_service"
                    android:textColor="@color/base"
                    android:textSize="12sp"
                    binding:onClickCommand="@{idCardViewModel.termsofserviceOnClickCommand}" />

                <TextView
                    style="@style/textBlackLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_rivacy"
                    android:textColor="@color/base"
                    android:textSize="12sp"
                    binding:onClickCommand="@{idCardViewModel.rivacyOnClickCommand}" />
            </LinearLayout>

            <TextView
                style="@style/textGrayCommonSmall"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/id_card_auth_description"
                android:visibility="gone" />

            <TextView
                style="@style/textBlackNormal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/commit"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:bl_corners_radius="2dp"
                app:bl_pressed_color="@color/subscript2"
                app:bl_unpressed_color="@color/base"
                binding:onClickCommand="@{idCardViewModel.idCardUploadOnClickCommand}" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
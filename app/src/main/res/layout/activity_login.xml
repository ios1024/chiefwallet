<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <variable
            name="loginViewModel"
            type="com.spark.chiefwallet.app.me.user.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/login_title"
            layout="@layout/view_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <ImageView
                    android:layout_width="149dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/logo" />

                <TextView
                    style="@style/textBlackLarge"
                    android:layout_marginTop="10dp"
                    android:text="@string/welcome_to_login"
                    android:textColor="@color/welcomelogin"
                    android:textSize="@dimen/font_xlager"
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--style="@style/textBlackNormal"-->
                <!--android:layout_marginTop="16dp"-->
                <!--android:layout_marginBottom="16dp"-->
                <!--android:text="@string/login_tip"-->
                <!--android:textColor="@color/gray_70" />-->

                <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="112dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_margin="16dp"-->
                <!--android:foreground="?android:attr/selectableItemBackground"-->
                <!--app:cardCornerRadius="6dp"-->
                <!--app:cardElevation="4dp">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="46dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mobile_tv"
                                style="@style/textBlackLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_login"
                                android:textColor="@color/mobile_login"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/mobile_view"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/base" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_mailbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mailbox_tv"
                                style="@style/textBlackLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mailbox_login"
                                android:textColor="@color/welcomelogin"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/mailbox_view"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/base"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="48dp"
                        android:layout_marginRight="18dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        binding:onClickCommand="@{loginViewModel.chooseCountryOnClickCommand}">

                        <!--<TextView-->
                        <!--android:id="@+id/register_country_code"-->
                        <!--style="@style/textBlackNormal"-->
                        <!--android:layout_weight="1"-->
                        <!--android:paddingLeft="32dp"-->
                        <!--android:text="@{loginViewModel.countryCode}"-->
                        <!--android:textStyle="bold" /> -->
                        <TextView
                            android:id="@+id/register_country_code"
                            style="@style/textBlackNormal"
                            android:layout_weight="1"
                            android:text="@{loginViewModel.countryName}"
                            android:textColor="@color/mobile_login"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/svg_pull_down" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="18dp"
                        android:background="@color/base" />

                    <EditText
                        android:id="@+id/phone_num"
                        style="@style/editext_create_wallet"
                        android:layout_marginTop="28dp"
                        android:layout_marginRight="18dp"
                        android:hint="@string/phone_num_hint"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="@={loginViewModel.userName}"
                        android:textSize="@dimen/font_small" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="28dp"
                        android:layout_marginRight="18dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/user_password"
                            style="@style/editext_create_wallet"
                            android:layout_weight="1"
                            android:hint="@string/pwd_hint"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:text="@={loginViewModel.userPassWord}"
                            android:textSize="@dimen/font_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/pwd_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/svg_hide"
                                binding:onClickCommand="@{loginViewModel.pwdSwitchOnClickCommand}" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <!--</android.support.v7.widget.CardView>-->

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:bl_corners_radius="2dp"
                    app:bl_pressed_color="@color/subscript2"
                    app:bl_unpressed_color="@color/base"
                    binding:onClickCommand="@{loginViewModel.loginOnClickCommand}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp">

                    <TextView
                        style="@style/textBlueCommonSmall"
                        android:layout_marginTop="18dp"
                        android:text="@string/pwd_forget"
                        android:textStyle="bold"
                        binding:onClickCommand="@{loginViewModel.pwdForGetOnClickCommand}" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></LinearLayout>

                    <TextView
                        style="@style/textBlueCommonSmall"
                        android:layout_marginTop="18dp"
                        android:text="@string/register"
                        android:textStyle="bold"
                        binding:onClickCommand="@{loginViewModel.registerOnClickCommand}" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
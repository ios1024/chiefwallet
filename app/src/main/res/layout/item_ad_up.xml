<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="adUpResult"
            type="com.spark.otcclient.pojo.AdSelfUpFindResult.DataBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/textBlackNormal"
                        android:text="@{adUpResult.formatType()}"
                        android:textColor="@{adUpResult.isBuyType() ? @color/fall : @color/rise}"
                        android:textSize="14sp"
                        android:textStyle="bold" />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textGrayCommonSmall"
                            android:layout_marginTop="4dp"
                            android:text="@string/on_the_shelf"
                            android:textColor="@color/base"
                            android:textSize="@dimen/font_mini" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/svg_enter" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/svg_alipay"
                        android:visibility="@{adUpResult.isSupportAliPay() ? View.VISIBLE : View.GONE}" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/svg_wechatpay"
                        android:visibility="@{adUpResult.isSupportWeChatPay() ? View.VISIBLE : View.GONE}" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/svg_bankpay"
                        android:visibility="@{adUpResult.isSupportBankPay() ? View.VISIBLE : View.GONE}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_buy_number"
                            android:textColor="#FFA4ABC0"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/textGrayCommonSmall"
                            android:layout_marginTop="5dp"
                            android:text="@{adUpResult.Numbers()}"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/purchase_price"
                            android:textColor="#FFA4ABC0"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/textGrayCommonSmall"
                            android:layout_marginTop="5dp"
                            android:text="@{adUpResult.formatPrice()}"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_limit_money2"
                            android:textColor="#FFA4ABC0"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/textGrayCommonSmall"
                            android:layout_marginTop="5dp"
                            android:text="@{adUpResult.formatLimit()}"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/release_time"
                            android:textColor="#FFA4ABC0"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/textGrayCommonSmall"
                            android:layout_marginTop="5dp"
                            android:text="@{adUpResult.createTime()}"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View style="@style/line_ccc" />
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <variable
            name="pwdForgetTradeViewModel"
            type="com.spark.chiefwallet.app.me.safe.safecentre.tradepwd.pwdforget.PwdForgetTradeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/login_title"
            layout="@layout/view_title" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                binding:onClickCommand="@{pwdForgetTradeViewModel.chooseCountryOnClickCommand}">

                <!--<TextView-->
                <!--android:id="@+id/register_country_code"-->
                <!--style="@style/textBlackNormal"-->
                <!--android:layout_weight="1"-->
                <!--android:paddingLeft="32dp"-->
                <!--android:text="@{loginViewModel.countryCode}"-->
                <!--android:textStyle="bold" /> -->
                <TextView
                    android:id="@+id/register_country_code"
                    style="@style/textBlackNormal"
                    android:layout_weight="1"
                    android:text="@{pwdForgetTradeViewModel.countryName}"
                    android:textColor="@color/mobile_login"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svg_pull_down" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/base" />
            <EditText
                android:id="@+id/phone_num"
                style="@style/editext_create_wallet"
                android:layout_marginTop="28dp"
                android:hint="@string/phone_num_hint"
                android:maxLines="1"
                android:padding="4dp"
                android:text="@={pwdForgetTradeViewModel.phoneNum}"
                android:textSize="@dimen/font_small" />




            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp">

                <EditText
                    style="@style/editext_create_wallet"
                    android:layout_weight="1"
                    android:hint="@string/verify_code_hint"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="@={pwdForgetTradeViewModel.verifyCode}"
                    android:textSize="@dimen/font_small" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/get_sms_code"
                        style="@style/textBlueCommonSmall"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/str_send"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ll_countdownView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <cn.iwgang.countdownview.CountdownView
                            android:id="@+id/countdownView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:isShowHour="false"
                            app:isShowMinute="false"
                            app:isShowSecond="true"
                            app:suffixGravity="center"
                            app:timeTextColor="@color/base"
                            app:timeTextSize="@dimen/font_small" />

                        <TextView
                            style="@style/textBlueCommonSmall"
                            android:text="@string/resend_load" />
                    </LinearLayout>
                </FrameLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/user_password"
                    style="@style/editext_create_wallet"
                    android:layout_weight="1"
                    android:hint="@string/pwd_hint"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="@={pwdForgetTradeViewModel.newPwd}"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/pwd_switch"
                        onClickCommand="@{pwdForgetTradeViewModel.pwdSwitchOnClickCommand}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/svg_hide" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/newuser_password"
                    style="@style/editext_create_wallet"
                    android:layout_weight="1"
                    android:hint="@string/pwd_hint"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="@={pwdForgetTradeViewModel.newPwdAgain}"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/newpwd_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/svg_hide"
                        binding:onClickCommand="@{pwdForgetTradeViewModel.newAgainPwdSwitchOnClickCommand}" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>


        <TextView
            style="@style/textBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:bl_corners_radius="2dp"
            app:bl_pressed_color="@color/subscript2"
            app:bl_unpressed_color="@color/base"
            binding:onClickCommand="@{pwdForgetTradeViewModel.pwdResetOnClickCommand}" />
    </LinearLayout>
</layout>
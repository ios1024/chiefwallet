<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="propertyDetails"
            type="com.spark.acclient.pojo.CoinTransDetailsResult.DataBean.RecordsBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_typeall"
                        style="@style/textBlackNormal"
                        android:text="@{propertyDetails.initType()}"
                        android:textColor="@{propertyDetails.initTypeColor() ? @color/rise : @color/fall}"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_type1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/im_dao"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_right_point" />

                        <TextView
                            android:id="@+id/tv_type2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </FrameLayout>

                <TextView
                    style="@style/textGrayCommonFont13"
                    android:text="@{propertyDetails.formatDate()}"
                    android:textColor="#FF333333"
                    android:textSize="14sp" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <!--<TextView style="@style/textBlackNormal" />-->

                <TextView
                    style="@style/textGrayCommonFont13"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:text="@{propertyDetails.formatTypeName()}"
                    android:textColor="#FFA4ABC0"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textGrayCommonFont13"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="@string/fee2"
                    android:textColor="#FFA4ABC0"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textGrayCommonFont13"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:text="@string/statue"
                    android:textColor="#FFA4ABC0"
                    android:textStyle="bold" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    style="@style/textBlackNormal"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:text="@{propertyDetails.formatAmount()}"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="@{propertyDetails.formatFee()}"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textBlackNormal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@{propertyDetails.formatStatue()}"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <View
            style="@style/line_ccc"
            android:layout_marginTop="20dp"
            android:background="#FFE6E9F6" />
    </LinearLayout>
</layout>
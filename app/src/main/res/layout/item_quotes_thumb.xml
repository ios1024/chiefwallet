<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:binding="http://schemas.android.com/tools">

    <data>

        <variable
            name="allThumbResult"
            type="com.spark.modulespot.pojo.AllThumbResult.DataBean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:bl_ripple_color="@color/gray_ccc"
        app:bl_ripple_enable="true"
        app:bl_solid_color="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                binding:url="@{allThumbResult.initImgUrl()}"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/svg_btc_img"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_symbol"
                        style="@style/textBlackNormal"
                        android:text="@{allThumbResult.initSymbol()}"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/item_24hour_count"
                    style="@style/textGrayCommonSmall"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="@{allThumbResult.init24HourCount()}"
                    android:textSize="@dimen/font_mini"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_close_price"
                    style="@style/textBlackSmall"
                    android:maxLines="1"
                    android:text="@{allThumbResult.initClose()}"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/item_price_convert"
                    style="@style/textGrayCommonSmall"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="@{allThumbResult.initConvert()}"
                    android:textSize="@dimen/font_mini"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_chg"
                style="@style/textGrayCommonSmall"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.3"
                android:background="@{allThumbResult.isCoinPairPushChgUp() ? @drawable/drawable_green_light : @drawable/drawable_green_red}"
                android:gravity="center"
                android:padding="8dp"
                android:text="@{allThumbResult.initChg()}"
                android:textColor="@{allThumbResult.isCoinPairPushChgUp() ? @color/green : @color/red}"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"/>
    </LinearLayout>
</layout>
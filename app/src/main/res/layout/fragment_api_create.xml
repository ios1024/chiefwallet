<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="apiCreateViewModel"
            type="com.spark.chiefwallet.app.me.setting.apiinterface.apicreate.ApiCreateViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            style="@style/ll_item_52"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textBlackSmall"
                    android:text="IP地址"/>
            </LinearLayout>

            <EditText
                style="@style/trade_input"
                android:hint="请输入IP地址"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"/>

        <LinearLayout
            style="@style/ll_item_52">

            <TextView
                style="@style/textBlackSmall"
                android:layout_width="72dp"
                android:text="备注"/>

            <EditText
                style="@style/trade_input"
                android:hint="请输入备注信息"
                android:textSize="@dimen/font_normal"/>

        </LinearLayout>

        <View
            style="@style/line_ccc"/>

        <LinearLayout
            style="@style/ll_item_52">

            <TextView
                style="@style/textBlackSmall"
                android:layout_width="72dp"
                android:text="短信验证码"/>

            <EditText
                style="@style/trade_input"
                android:hint="请输入短信验证码"
                android:textSize="@dimen/font_normal"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="12dp"
                android:text="获取验证码"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_margin="16dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Emex 为您提供了强大的API，您可以通过 API 使用行情查询、自动交易等服务。通过 API 文档查看如何使用"
            android:textColor="@color/gray_51"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:lineSpacingMultiplier="1.2"
            android:text="每个用户最多创建5组API Key"
            android:textColor="@color/gray_51"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_margin="16dp"
            android:lineSpacingMultiplier="1.2"
            android:text="请不要泄露您的API Key，以免造成资产损失。出于安全考虑，建议为API Key绑定IP，每个API Key最多绑定4个IP。 单个地址直接填写，多个IP地址用半角逗号分隔，如：192.168.1.1,192.168.1.2,192.168.1.3"
            android:textColor="@color/gray_51"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            style="@style/textBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="创建"
            android:textStyle="bold"
            app:bl_corners_radius="4dp"
            app:bl_pressed_color="@color/base_dark"
            app:bl_unpressed_color="@color/base"/>
    </LinearLayout>
</layout>
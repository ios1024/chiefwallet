<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="apiCreateViewModel"
            type="com.spark.chiefwallet.app.me.setting.apiinterface.apicreate.ApiCreateViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            style="@style/ll_item_52"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textBlackSmall"
                    android:text="@string/str_ip"/>
            </LinearLayout>

            <EditText
                style="@style/trade_input"
                android:hint="@string/str_enter_ip"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"/>

        <LinearLayout
            style="@style/ll_item_52">

            <TextView
                style="@style/textBlackSmall"
                android:layout_width="72dp"
                android:text="@string/remark"/>

            <EditText
                style="@style/trade_input"
                android:hint="@string/str_enter_reamrk"
                android:textSize="@dimen/font_normal"/>

        </LinearLayout>

        <View
            style="@style/line_ccc"/>

        <LinearLayout
            style="@style/ll_item_52">

            <TextView
                style="@style/textBlackSmall"
                android:layout_width="72dp"
                android:text="@string/sms_code"/>

            <EditText
                style="@style/trade_input"
                android:hint="@string/str_enter_sms_code"
                android:textSize="@dimen/font_normal"/>

            <TextView
                style="@style/textGrayCommonNormal"
                android:layout_marginLeft="12dp"
                android:text="@string/get_verify_code"/>
        </LinearLayout>

        <View
            style="@style/line_ccc"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_margin="16dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/str_api_tip"
            android:textColor="@color/gray_51"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/str_api_tip2"
            android:textColor="@color/gray_51"/>

        <TextView
            style="@style/textBlackSmall"
            android:layout_margin="16dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/str_api_tip3"
            android:textColor="@color/gray_51"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            style="@style/textBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/str_create"
            android:textStyle="bold"
            app:bl_corners_radius="4dp"
            app:bl_pressed_color="@color/base_dark"
            app:bl_unpressed_color="@color/base"/>
    </LinearLayout>
</layout>
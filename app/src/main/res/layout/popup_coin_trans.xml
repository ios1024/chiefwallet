                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/svg_pull_down_black" />-->
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/line_ccc"
                android:layout_marginLeft="16dp" />

            <TextView
                style="@style/textGrayCommonFont13"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/number"
                android:textStyle="bold" />

            <LinearLayout style="@style/ll_item_52">

                <EditText
                    android:id="@+id/trans_num"
                    style="@style/textBlackNormal"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/trans_number_hint"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/trans_all"
                    style="@style/textGrayCommonFont13"
                    android:text="@string/extract_all"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                style="@style/line_ccc"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/trans_num_available"
                style="@style/textGrayCommonFont13"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/btn_trans"
                style="@style/textBlackNormal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="@string/coin_trans"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:bl_corners_radius="2dp"

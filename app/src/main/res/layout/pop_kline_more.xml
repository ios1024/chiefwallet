<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/kline_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/popup_kline_more_15min"
        style="@style/textGrayCommonSmall"
        android:layout_marginLeft="16dp"
        android:text="@string/min15_text"
        android:textSize="@dimen/font_mini"/>

    <TextView
        android:id="@+id/popup_kline_more_30min"
        style="@style/textGrayCommonSmall"
        android:layout_marginLeft="24dp"
        android:text="@string/min30_text"
        android:textSize="@dimen/font_mini"/>

    <TextView
        android:id="@+id/popup_kline_more_1week"
        style="@style/textGrayCommonSmall"
        android:layout_marginLeft="24dp"
        android:text="@string/week1_text"
        android:textSize="@dimen/font_mini"/>

    <TextView
        android:id="@+id/popup_kline_more_1month"
        style="@style/textGrayCommonSmall"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:text="@string/month1_text"
        android:textSize="@dimen/font_mini"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>